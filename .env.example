# Azure OpenAI Settings (Required)
# Uses Entra ID (Service Principal) authentication
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure Entra ID credentials
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret

# Azure OpenAI Embedding Model
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-large

# Per-agent Azure deployment overrides (optional)
# ORCHESTRATOR_AZURE_DEPLOYMENT=gpt-4o
# RESEARCH_AZURE_DEPLOYMENT=gpt-4o
# EXPLAINER_AZURE_DEPLOYMENT=gpt-4o
# KNOWLEDGE_AZURE_DEPLOYMENT=gpt-4o

# External API Keys (Required)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here
GITHUB_TOKEN=your_github_token_here
CONTEXT7_API_KEY=your_context7_api_key_here

# Agent URLs (for local development)
RESEARCH_AGENT_URL=http://localhost:8001
EXPLAINER_AGENT_URL=http://localhost:8002
KNOWLEDGE_AGENT_URL=http://localhost:8003

# Corporate Network Proxy Settings (Optional)
# Uncomment and configure if running in a corporate network that requires proxy
# HTTP_PROXY=http://your-proxy-server:port
# HTTPS_PROXY=http://your-proxy-server:port
# NO_PROXY=localhost,127.0.0.1,research,explainer,knowledge,orchestrator
